{
    "AllowedHosts": "*",
    "Serilog": {
        "Using": [],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Information",
                "System": "Error"
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "RollingFile",
                "Args": {
                    "pathFormat": "log-{Date}.json",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "retainedFileCountLimit": 5
                }
            }
        ]
    }
}
